<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Commonly Used -->
    <attr name="showIndicator" format="boolean" />
    <attr name="indicatorScale" format="float" />
    <attr name="showSlideNumber" format="boolean"/>
    <attr name="slideNumberTextSize" format="integer" />

    <!-- XML attributes for Carousel View -->
    <declare-styleable name="CarouselView">
        
        <attr name="scrollDirection" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="showIndicator" />
        <attr name="indicatorScale" />
        <attr name="showSlideNumber" />
        <attr name="slideNumberTextSize" />
        
    </declare-styleable>

    <!-- XML attributes for Slideshow View -->
    <declare-styleable name="SlideshowView">

        <attr name="showIndicator" />
        <attr name="indicatorScale" />
        <attr name="showSlideNumber" />
        <attr name="slideNumberTextSize" />
        <attr name="delayTimePeriod" format="integer" />

    </declare-styleable>


</resources>